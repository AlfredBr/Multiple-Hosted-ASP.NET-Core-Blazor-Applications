@inject NavigationManager Nav
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="http://localhost:7004"><span class="oi oi-grid-four-up" aria-hidden="true"></span></a>
        <span class="navbar-brand fw-bold">App Menu</span>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@GetHref(7001)">
                <span class="oi oi-home" aria-hidden="true"></span> App 1
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@GetHref(7002)">
                <span class="oi oi-home" aria-hidden="true"></span> App 2
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@GetHref(7003)">
                <span class="oi oi-home" aria-hidden="true"></span> App 3
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string GetHref(int port) => $"http://{(new Uri(Nav.BaseUri).Host)}:{port}";
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
